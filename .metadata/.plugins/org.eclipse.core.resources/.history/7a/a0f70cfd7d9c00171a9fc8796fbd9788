<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
targetNamespace="http://www.example.org/bulletin" 
xmlns="http://www.example.org/bulletin" 
elementFormDefault="qualified">

<xs:element name="message" type="xs:string"/>
<xs:element name="writerID" type="xs:string"/>
<xs:element name="writerName" type="xs:string"/>

<xs:element name="bulletin">
	<xs:complexType>
		<xs:sequence>
			<xs:element name="board">
				<xs:complexType>
					<xs:sequence>
					<xs:element name="name" type="xs:string"/>
					<xs:element name="article" maxOccurs="unbounded">
						<xs:complexType>
							<xs:sequence>
							<xs:element name="title" type="xs:string"/>
							<xs:element ref="message"/>
							<xs:element ref="writerID"/>
							<xs:element ref="writerName"/>
							<xs:element name="reply">
								<xs:complexType>
									<xs:sequence>
									<xs:element ref="message"/>
									<xs:element ref="writerID"/>
									<xs:element ref="writerName"/>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
							</xs:sequence>
						</xs:complexType>
					</xs:element>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>
</xs:element>

</xs:schema>